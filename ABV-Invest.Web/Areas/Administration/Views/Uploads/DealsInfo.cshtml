@model FilesUploadedBindingModel

@{
    ViewData["Title"] = "Качване на информация за сделки";
}

<div class="container bg-abvdarkgreen">
    <h2 class="bg-abvmiddlegreen">@ViewData["Title"]</h2>
    <hr class="hr-2" />
    <h4 class="bg-abvmiddlegreen">Тук можете да качите файлът с клиентските сделки:</h4>
    <br />
    <section>
        <form method="post" asp-area="Administration" asp-controller="Uploads" asp-action="DealsInfo" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-3 my-auto" name="Date">
                <partial name="_AdminDatePartial" />
            </div>
            <div class="form-group col-md-4 my-auto" name="XMLFile">
                <label asp-for="@Model.XMLFile" class="control-label">Клиентски сделки</label>
                <input asp-for="@Model.XMLFile" type="file" class="form-control" style="height: auto" />
                <span asp-validation-for="@Model.XMLFile" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 my-auto">
                <br />
                <input type="submit" class="btn bg-bg-abvdarkgreen bg-abvlightgreen" value="Качи" />
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}