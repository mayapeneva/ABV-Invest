@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на лична информация";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<div class="container bg-abvdarkgreen">
    <div class="col-md-6">
        <h4 class="bg-abvmiddlegreen">@ViewData["Title"]</h4>
        <hr />
        <div class="alert alert-warning" role="alert">
            <p class="bg-abvred">
                <span class="glyphicon glyphicon-warning-sign"></span>
                <strong> Изтриването на личните Ви данни ще изтрие регистрацията Ви в този уебсайт и няма да имате достъп до системата.</strong>
            </p>
        </div>
        <form id="delete-user" method="post" class="form-group">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-group">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="btn btn-danger" type="submit">Изтриване на данните и прекратяване на регистрацията</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}