@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Промени паролата си";
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="container bg-abvdarkgreen">
    <div class="col-md-6">
        <h4 class="bg-abvmiddlegreen">@ViewData["Title"]</h4>
        <hr />
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword">Стара парола</label>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">Нова парола</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Потвърди новата парола</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn bg-abvlightgreen bg-bg-abvdarkgreen">Промени паролата</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}