@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравена парола";
}

<div class="container">
    <h2 class="bg-abvmiddlegreen">@ViewData["Title"]</h2>
    <hr />
    <div class="col-md-6">
        <h4 class="bg-abvmiddlegreen">Попълнете имейла си:</h4>
        <br />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Имейл</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Изпрати</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}