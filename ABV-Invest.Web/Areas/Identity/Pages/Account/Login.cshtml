@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<h2 class="bg-abvmiddlegreen" align="center">@ViewData["Title"]</h2>
<hr />

<div class="row bg-abvdarkgreen">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <section>
            <form method="post">
                <h4>Вход за потребители.</h4>
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Имейл</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Запомни ме
                        </label>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn bg-bg-abvdarkgreen bg-abvlightgreen">Вход</button>
                </div>
                <br />
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Забравена парола</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай се като потребител</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}