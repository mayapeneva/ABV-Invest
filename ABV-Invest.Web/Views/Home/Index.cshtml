@inject SignInManager<AbvInvestUser> SignInManager

@{
    ViewData["Title"] = "Начало";
}

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <partial name="_AdminIndexPartial" />
    }
    else if (User.IsInRole("User"))
    {
        <partial name="_UserIndexPartial" />
    }
}
else
{
    <partial name="_NotLoggedIndexPartial" />
}