@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bullandbear.png" alt="Bull and Bear" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2><strong>ABV Invest - Your partner on the stock exchange.</strong></h2>
            </div>
        </div>
        <div class="item">
            <img src="~/images/business.jpg" alt="Business" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2><strong>Invest your money with us.</strong></h2>
            </div>
        </div>
        <div class="item">
            <img src="~/images/buysell.jpg" alt="Buy Sell" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h2><strong>BUY and SELL stocks.</strong></h2>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4" align="center">
        <a class="bg-abvdarkgreen"><h3>Login</h3></a>
    </div>
    <div class="col-md-4" align="center">
        <a class="bg-abvdarkgreen"><h3>Register</h3></a>
    </div>
    <div class="col-md-4" align="center">
        <a class="bg-abvdarkgreen"><h3>News</h3></a>
    </div>
</div>